  const brandVariants = {
    initial: { scale: 0.8, opacity: 0 },
    animate: { 
      scale: 1, 
      opacity: 1,
      transition: { 
        delay: 0.3,
        type: "spring", 
        stiffness: 150, 
        damping: 40 
      }
    }
  };

  const contentVariants = {
    initial: { x: 50, opacity: 0 },
    animate: { 
      x: 0, 
      opacity: 1,
      transition: { 
        delay: 0.5,
        type: "spring", 
        stiffness: 200, 
        damping: 30 
