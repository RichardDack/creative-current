  // Add landmark-based keywords
  if (townData.landmarks) {
    townData.landmarks.forEach(landmark => {
      baseKeywords.push(
        `web design near ${landmark}`,
        `website design ${landmark} area`
      );
    });
  }

  return baseKeywords;
};
