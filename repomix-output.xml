interface FAQ {
  question: string;
  answer: string;
}

interface LocalFAQSectionProps {
  faqs: FAQ[];
  townName: string;
}

const sectionVariants: Variants = {
  hidden: { opacity: 0 },
  visible: {
    opacity: 1,
    transition: {
      staggerChildren: 0.1,
      delayChildren: 0.2
    }
