  background: var(--color-primary);
  color: rgb(255, 255, 255);
  padding: 8px 24px;
  border-radius: 4px;
}

/* Inactive navigation items */
.navItem:not(.active) .navText {
  font-size: clamp(2.5rem, 6vw, 4.5rem); /* Large but smaller than active */
  color: rgb(255, 255, 255);
  background: transparent;
}

/* Down Arrow for Hover (all items) */
.downArrow {
  position: absolute;
  right: -40px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 1.5rem;
  color: var(--color-primary);
  font-weight: bold;
  opacity: 0; /* Hidden by default */
  transition: opacity 0.3s ease;
  pointer-events: none;
}

/* Show arrow on hover for all items */
.navLink:hover .downArrow {
  opacity: 1;
}

/* Hover effects for inactive items only */
.navItem:not(.active) .navLink:hover .navText {
  color: var(--color-primary);
  transform: translateX(8px);
}

/* Content Area */
.contentArea {
  grid-area: content;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding-top: 60px;
  padding-left: 40px;
}

.tagline {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: clamp(1.25rem, 2.5vw, 1.75rem);
  font-weight: 600;
  color: rgb(255, 255, 255); /* White text */
  margin-bottom: 24px;
  line-height: 1.3;
}

.description {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: clamp(0.95rem, 1.2vw, 1.1rem);
  color: rgba(255, 255, 255, 0.8); /* Slightly transparent white */
  line-height: 1.6;
  max-width: 400px;
}

/* Brand Section - Massive Typography */
.brandSection {
  grid-area: brand;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
  overflow: hidden;
}

.brandText {
  display: flex;
  align-items: center;
  gap: 20px;
  width: 100%;
  justify-content: center;
}

.creative {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: clamp(4rem, 20vw, 18rem); /* Absolutely massive */
  font-weight: 900;
  line-height: 0.8;
  letter-spacing: -0.05em;
  color: var(--color-primary);
  text-align: center;
  white-space: nowrap;
}

/* Decorative Elements */
.decorativeElements {
  position: absolute;
  bottom: 20px;
  right: 20px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.qrPlaceholder {
  width: 60px;
  height: 60px;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: rgba(255, 255, 255, 0.6);
}

/* Responsive Design */
@media (max-width: 1199px) {
  .hero {
    padding: 0 32px;
    grid-template-columns: 1fr 1fr;
    grid-template-areas: 
      ". ."
      "nav content"
      "brand brand";
  }
  
  .contentArea {
    padding-left: 24px;
