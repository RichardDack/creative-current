            key={item.name}
            className={`${styles.navItem} ${item.active ? styles.active : ''}`}
            initial={{ y: 50, opacity: 0 }}
            animate={{ y: 0, opacity: 1 }}
            transition={{ delay: 0.2 + (index * 0.1), duration: 0.6 }}
